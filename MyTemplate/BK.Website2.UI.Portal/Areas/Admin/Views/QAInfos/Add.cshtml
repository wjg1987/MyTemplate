@model My.Template.Model.QAInfos

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


@section Head{
        <!-- PAGE LEVEL STYLES -->
    <link href="/areas/admin/assets/css/jquery-ui.css" rel="stylesheet"/>
         <link href="/Scripts/uploadify3.2.1/uploadify.css" rel="stylesheet" />
}


       <!--PAGE CONTENT -->
        <div id="content">

            <div class="inner">
                 <div class="row">
                    <div class="col-lg-12">
                        <h3> 添加QA </h3>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="icon-edit"></i>
                                </div>
                                <h5>添加信息</h5>
                            </header>
                            <div id="div-1" class="accordion-body collapse in body">
                                @using (Html.BeginForm("Add", "QAInfos", FormMethod.Post, new { @class = "form-horizontal", id = "AddForm" }))
                                {
                                    <input type="hidden" name="pageNum" value="@ViewBag.pageNum" />
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.LabelFor(u => u.Question, "问题", new {@class = "control-label col-lg-4"})
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u => u.Question)
                                            @Html.TextBoxFor(u => u.Question, new {placeholder = "问题", @class = "form-control"})
                                        </div>
                                    </div>
                                    
                                       <div class="form-group">
                                        @Html.LabelFor(u => u.Sequence , "排序", new {@class = "control-label col-lg-4"})
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u => u.Sequence)
                                            @Html.TextBoxFor(u => u.Sequence, new {placeholder = "排序", @class = "form-control"})
                                             <span style="color: red;">整数,数字越小排越前</span>
                                        </div>
                                    </div>
                              
                                    
                                    <div class="form-group">
                                        @Html.LabelFor(u => u.IsView, "是否显示", new {@class = "control-label col-lg-4"})
                                        <div class="col-lg-8">
                                           @Html.ValidationMessageFor(u=>u.IsView)
                                        @Html.CheckBoxFor(u => u.IsView)
                                         </div>
                                    </div>
                                    
                                        
                                     <div class="form-group">
                                        @Html.LabelFor(u => u.Answer, "答案", new {@class = "control-label col-lg-4"})
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u=>u.Answer)
                                            @Html.TextAreaFor(u => u.Answer, new {placeholder = "答案", @class = "form-control"})
                                        </div>
                                    </div>
                                  
                              
                                  

                                    <div class="form-group">
                                        
                                        <div class="col-lg-8 divsure">
                                            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                                            <a href="@ViewBag.returnUrl" class="btn  btn-default btn-rect">取消</a>
                                            <input type="submit" value="确认" class="btn btn-success btn-rect"/>
                                        </div>
                                    </div>
                                }
                             
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            </div>
@section Foot{
    <!-- PAGE LEVEL SCRIPTS -->
    <script src='@Url.Content("~/Scripts/jquery/jquery.validate.js")'></script>
    <script src="/Scripts/jquery/jquery.validate.unobtrusive.min.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    
    
     @*编辑器*@
    <link href='@Url.Content("~/Scripts/kindeditor/themes/default/default.css")' rel="stylesheet" />
    <script src='@Url.Content("~/Scripts/kindeditor/kindeditor.js")'></script>
  
    <script>
        //详细内容
        KindEditor.ready(function (K) {
            var editor1 = K.create('#Answer', {
                items: [
						'source', 'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline',
						'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist',
						'insertunorderedlist', '|', 'emoticons', 'image', 'media', 'link', 'fullscreen'],
                uploadJson: '/admin/KindEditorUpload/ProcessFile',
                fileManagerJson: "/admin/KindEditorUpload/ProcessFileManger",
                filterMode: false,
                allowFileManager: true,
            })
        });
    </script>
  
}