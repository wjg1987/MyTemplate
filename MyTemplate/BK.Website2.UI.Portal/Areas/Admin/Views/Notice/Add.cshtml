@model My.Template.Model.Notice

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


@section Head{
        <!-- PAGE LEVEL STYLES -->
<link href="/areas/admin/assets/css/jquery-ui.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}
       <!--PAGE CONTENT -->
        <div id="content">

            <div class="inner">
                 <div class="row">
                    <div class="col-lg-12">
                        <h3> 添加公告 </h3>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="box dark">
                            <header>
                                <div class="icons"><i class="icon-edit"></i>
                                </div>
                                <h5>添加信息</h5>
                            </header>
                            <div id="div-1" class="accordion-body collapse in body">
                                @using (Html.BeginForm("Add", "Notice", FormMethod.Post, new { @class = "form-horizontal", id = "AddForm" }))
                                {
                                    <input type="hidden" name="pageNum" value="@ViewBag.pageNum" />
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.LabelFor(u => u.Title, "标题", new { @class = "control-label col-lg-4" })
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u => u.Title)
                                            @Html.TextBoxFor(u => u.Title, new { placeholder = "标题", @class = "form-control" })

                                        </div>
                                    </div>

                                      <div class="form-group">
                                        @Html.LabelFor(u => u.NDetails, "描述", new { @class = "control-label col-lg-4" })
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u => u.NDetails)
                                            @Html.TextAreaFor(u => u.NDetails, new { placeholder = "描述", @class = "form-control", maxlength = 512 })

                                        </div>
                                    </div>

                           
                                   <div class="form-group">
                                         @Html.LabelFor(u => u.LinkUrl, "链接", new { @class = "control-label col-lg-4" })
                                       <div class="col-lg-8">
                                           @Html.ValidationMessageFor(u => u.LinkUrl)
                                           @Html.TextBoxFor(u => u.LinkUrl, new { placeholder = "链接", @class = "form-control", maxlength = 128 })
                                       </div>
                                    </div>

       
                                 
                                    <div class="form-group">
                                        @Html.LabelFor(u => u.ExpireTime, "过期时间", new { @class = "control-label col-lg-4" })
                                        <div class="col-lg-8">
                                               @Html.ValidationMessageFor(u => u.ExpireTime)
                                           @Html.TextBoxFor(u => u.ExpireTime, new { placeholder = "过期时间", @class = "form-control", maxlength = 128 })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(u => u.Sequence, "排序", new {@class = "control-label col-lg-4"})
                                        <div class="col-lg-8">
                                            @Html.ValidationMessageFor(u => u.Sequence)
                                            @Html.TextBoxFor(u => u.Sequence, new {placeholder = "数字越小排越前", @class = "form-control", @style = "max-width: 20%;display:inline;"}) <span style="color: red;">数字越小排越前</span>                             
                                            
                                        </div>
                                    </div>
                                           
                    
                                    <div class="form-group">
                                        <div class="col-lg-8 divsure">

                                            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                                         <a href="@ViewBag.returnUrl" class="btn  btn-default btn-rect">取消</a>
                                            <input type="submit" value="确认" class="btn btn-success btn-rect"/>
                                        </div>
                                         </div>
                                }
                             
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            </div>
@section Foot{
    <!-- PAGE LEVEL SCRIPTS -->
    <script src='@Url.Content("~/Scripts/jquery/jquery.validate.js")'></script>
    <script src="/Scripts/jquery/jquery.validate.unobtrusive.min.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->


}